<!-- Header Carousel -->
    <header id="pic-carousel" class="carousel slide">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#pic-carousel" data-slide-to="0" class="active"></li>
            <li data-target="#pic-carousel" data-slide-to="1"></li>
            <li data-target="#pic-carousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="/assets/learning_together.jpg" style="width:100%;height:100%">
                <div class="carousel-caption">
                    <h2>Learning Together</h2>
                </div>
            </div>
            <div class="item">
                <img src="/assets/laughing_together.jpg" style="width:100% ; height:200%">
                <div class="carousel-caption">
                    <h2>Laughing Together</h2>
                </div>
            </div>
            <div class="item">
                <img src="/assets/growing_together.jpg">
                <div class="carousel-caption">
                    <h2>Growing Together</h2>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#pic-carousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#pic-carousel" data-slide="next">
            <span class="icon-next"></span>
        </a>
    </header>